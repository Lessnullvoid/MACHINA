s=Server.local.boot;
~samplesPath = "/media/d783d9c6-cbb7-4d43-bc56-ba0e20e099ab/home/furenku/chamba/SC3/machinaMixer/samples/";

~samples=(~samplesPath++"*").pathMatch;
~buffers=List.new;

~samples.do{|path|
	~buffers.add(Buffer.read(s,path));
}

~buffers[0].play;
